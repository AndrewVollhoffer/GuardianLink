<div class="container-fluid w-50">

  <div class="text-center text-purple m-3 p-3">
      <h1><strong>Log In</strong></h1>
  </div>

  <%= form_with url: log_in_path  do |form| %>

    <div class="form-floating mb-3">
      <%= form.email_field :email, required: true, placeholder: "Email address", class: "form-control" %>
      <%= form.label :email, class: "form-label" %>
    </div>

    <div class="form-floating mb-3">
        <%= form.password_field :password, required: true, placeholder: "Password", class: "form-control" %>
        <%= form.label :password, class: "form-label"  %>
      <div class="form-text"> <%= link_to "Forgot your Password?", password_reset_path %> </div>
    </div>

    <div class="form-floating mb-3">
      <%= form.password_field :password_confirmation, required: true, placeholder: "Password confirmation", class: "form-control" %>
      <%= form.label :password_confirmation, class: "form-label" %>
    </div>
    
    <div class="mb-3">
      <%= form.submit 'Log In', class: "btn btn-primary" %>
    </div>

    <div>
      <%= link_to "Back", root_path %>
    </div>

  <% end %>
</div>