<h1>Users</h1>

<div id="users_table">
  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Last Update</th>
        <th></th>
        <th></th>
      </tr>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td> <%= user.email %> </td>
          <td> <%= user.password %> </td>
          <td> <%= user.updated_at %> </td>
          <td> <%= link_to "Show", user %> </td>
          <td> <%= button_to 'Delete', user, method: :delete %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
<%= link_to "New user", new_user_path %>
