<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <p>
      <%= form.label "Profile photo:" %>
      <%= form.file_field :profile_photo %>
    </p>
    <p>
      <%= form.label :email %>
      <%= form.hidden_field :email, value: @user.email %>
    </p>
    <p>
      <%= form.label :first_name %>
      <%= form.text_field :first_name, placeholder: "First name" %>
    </p>
    <p>
      <%= form.label :last_name %>
      <%= form.text_field :last_name, placeholder: "Last name" %>
    </p>
    <p>
      <%= form.label :hours %>
      <%= form.number_field :hours, placeholder: 0 %>
    </p>
    <p>
      <%= form.label :linkedin %>
      <%= form.text_field :linkedin %>
    </p>
    <p>
      <%= form.label :bio %>
      <%= form.text_area :bio %>
    </p>
    <p>
      <%= form.submit %>
    </p>
  </div>

<% end %>
