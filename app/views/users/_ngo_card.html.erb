<div id="ngos_action_table">
  <table class="table table-striped table-hover">
      <tbody>
          <% @users.each do |user| %>
            <!-- Checks if account is not an admin, IS a NGO and creates a table row to output a NGO card -->
            <% if !user.admin? && user.ngo? && profile_completed?(user) %>
              <tr>
                  <div class="card mb-3" style="max-width: 600px;">
                    <div class="row g-0">
                      <div class="col-md-4">
                        <% if user.profile_photo.attached? %>
                          <%= image_tag(user.profile_photo, size: "100", alt: "...") %>
                        <% else %>
                          <%= image_tag("empty profile picture.jpg", size: "100", alt: "...") %>
                        <% end %>
                      </div>
                      <div class="col-md-8">
                        <div class="card-body">
                          <h5 class="card-title"><%= "#{user.first_name}" %></h5>
                          <p class="card-text"><%= user.bio %></p>
                          <!-- <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p> -->
                          <%= link_to "Go To ->", user_path(user), class: "btn btn-primary" %>
                        </div>
                      </div>
                    </div>
                  </div>
              </tr>
            <% end %>
          <% end %>
      </tbody>
  </table>
</div>
